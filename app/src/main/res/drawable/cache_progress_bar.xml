<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#9c9c9c"
                android:centerColor="#9c9c9c"
                android:centerY="1.0"
                android:endColor="#9c9c9c"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#30bf62"
                android:centerColor="#30bf62"
                android:centerY="1.0"
                android:endColor="#30bf62"
                android:angle="270"
                />
        </shape>
    </clip>
</item>

</layer-list>