<resources>

    <!--  Themes  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorText</item>
        <item name="actionBarTheme">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarWidgetTheme">@style/AppTheme.Widget</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimaryDark">@color/windowBackground</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle</item>
    </style>

    <!-- Styles -->
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/cache_progress_bar</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:title">@color/white</item>
    </style>

    <style name="searchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:searchIcon">@drawable/search_icon</item>
        <item name="android:closeIcon">@drawable/close_icon</item>
        <item name="android:hint">@string/queryHint</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="AppTheme.Widget" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:searchViewStyle">@style/searchStyle</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

</resources>
